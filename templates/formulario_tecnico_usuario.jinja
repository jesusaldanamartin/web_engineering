{% extends 'base.jinja' %}

{% block head %}
<title> Robots Asistenciales</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block content %}

<body class="bg">
    <fieldset class="main-container row p-5 mx-0 justify-content-center align-self-center">
        <div class="main-container row p-3 mx-0 justify-content-center align-self-center">
            <div class="row col-md-10 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                        <li class="breadcrumb-item"><a href="/admin" data-abc="true">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><span>Formulario para añadir un usuario</span></li>
                    </ol>
                </nav>
            </div>
            <h1 class="main-container row p-2 mx-0 justify-content-center align-self-center">Añada un usuario</h1>
            <form class="main-container row p-2 mx-0 justify-content-center align-self-center" method="post"
                name="formulario_lista_tareas">

                <div class="card">
                    <div class="card-body py-5 px-md-5">
                        <form class="form_formulario_tecnico_usuario" action="/admin/formularioUsuarios" method="POST">

                            <!-- ID input -->
                            <div class="form-group row mb-4">
                                <label for="id" class="col-sm-2 col-form-label">Id</label>
                                <div class="col-sm-10">
                                    <input type="id" class="form-control" id="id" name="id" placeholder="Id">
                                </div>
                            </div>

                            <!-- NombreUsuario input -->
                            <div class="form-group row mb-4">
                                <label for="name" class="col-sm-2 col-form-label">Nombre</label>
                                <div class="col-sm-10">
                                    <input type="name" class="form-control" id="name" name="name" placeholder="Name">
                                </div>
                            </div>
                            <!-- Email input -->
                            <div class="form-group row mb-4">
                                <label for="email" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="Email">
                                </div>
                            </div>

                            <!-- password input -->
                            <div class="form-group row mb-4">
                                <label for="password" class="col-sm-2 col-form-label">Contraseña</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Password">
                                </div>
                            </div>

                            <!-- Status input -->
                            <div class="form-group row mb-4">
                                <label for="status" class="col-sm-2 col-form-label">Rol</label>
                                <div class="col-sm-10">
                                    <input type="status" class="form-control" id="status" name="status"
                                        placeholder="Status">
                                </div>
                            </div>

                            <!-- Enviar Usuario button -->
                            <button type="submit" class="btn btn-block mb-4 bot_inicio">
                                Crear Usuario
                            </button>
                            <!--Limpiar Tarea button -->
                            <input type="reset" value="Limpiar" class="btn btn-block mb-4 bot_inicio">

                            {% for mesg in get_flashed_messages() %}
                            {% if mesg == '¡Usuario creado con éxito!' %}
                            <div class="text-center alert alert-success">
                                <p style="color: green;">{{ mesg }}
                                <p>
                            </div>
                            {% else %}
                            <div class="text-center alert alert-danger ">
                                <p style="color: red;">{{ mesg }}
                                <p></p>
                            </div>
                            {% endif %}
                            {% endfor %}
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </fieldset>
</body>

{% endblock %}

{% block scripts %}

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
    integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous">
    </script>

{% endblock %}