    <fieldset class="text-black col-md-10 px-3 bot2">
      <form method="GET" class="mt-5 row justify-content-center table-sortable">
        <div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID Robot</th>
                <th scope="col">Nombre robot</th>
                <th scope="col">ID Tarea</th>
                <th scope="col">Estado</th>
                <th scope="col">Tarea asignada</th>
                <th scope="col">Fecha</th>
                <th scope="col">Asignar tarea</th>
              </tr>
            </thead>
            <tbody>
              {% for tablas in acciones %}
              <tr>
                <td>{{tablas.id_robot}}</td>
                <td><a href="/doctor/{{tablas.id_robot}}">{{tablas.name_robot}}</td>
                <td>{{tablas.id_Tareas}}</td>
                <td>{{tablas.estado}}</td>
                <td>{{tablas.tipoTarea}}</td>
                <td>{{tablas.date}}</td>
                <td>
                  <a href="/asignacionTareas/{{tablas.name_robot}}">Asignar</a>
                </td>

              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </form>
    </fieldset>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Incidencia</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" action="/doctor">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Cabecera:</label>
                <input type="text" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Informe:</label>
                <textarea class="form-control" id="message-text"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary">Enviar incidencia</button>
          </div>
        </div>
      </div>
    </div>

