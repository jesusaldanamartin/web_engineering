{% extends 'base.jinja' %}

{% block head %}
<title> Robots Asistenciales</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block content %}

<body class="bg">
    <div class="container">
        <div class="row ">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-custom">
                    <li class="breadcrumb-item"><a href="/doctor" data-abc="true">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><span>Formulario Incidencia</span></li>
                </ol>
            </nav>
        </div>
        <div class="row ">
            <fieldset class="main-container row p-5 mx-0 justify-content-center align-self-center">
                <div class="main-container row p-2 mx-0 justify-content-center align-self-center">
                    <h1 class="main-container row p-2 mx-0 justify-content-center align-self-center">Formulario
                        Incidencias</h1>
                    <form class="main-container row p-2 mx-0 justify-content-center align-self-center" method="post"
                        name="formulario_lista_tareas">

                        <div class="card">
                            <div class="card-body py-5 px-md-5">
                                <form class="form_formulario_incidencia" action="/admin/formularioIncidencia"
                                    method="POST">

                                    <!-- Asunto input -->
                                    <div class="form-group row mb-4">
                                        <label for="name" class="col-sm-2 col-form-label">Asunto</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="asunto" name="asunto"
                                                placeholder="Escribe aquí el asunto de su incidencia">
                                        </div>
                                    </div>
                                    <!-- Informe input -->
                                    <div class="form-group row mb-4">
                                        <label for="email" class="col-sm-2 col-form-label">Informe</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="informe" name="informe"
                                                placeholder="Escribe aquí el informe de su incidencia">
                                        </div>
                                    </div>

                                    <!-- Enviar Incidencia button -->
                                    <button type="submit" class="btn btn-block mb-4 bot_inicio">
                                        Enviar Incidencia
                                    </button>
                                    <!--Limpiar button -->
                                    <input type="reset" value="Limpiar" class="btn btn-block mb-4 bot_inicio">

                                </form>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
        </div>
</body>

{% endblock %}

{% block scripts %}

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
    integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous">
    </script>

{% endblock %}

.breadcrumb {
padding: 40px 150px;
}